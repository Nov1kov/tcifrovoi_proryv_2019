<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:maxHeight="240dp"
        android:maxWidth="350dp"
        android:minHeight="240dp"
        android:minWidth="350dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <ImageView
            android:src="@drawable/quiz_background"
            android:adjustViewBounds="true"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"/>

    <TextView
            android:id="@+id/text"
            android:textColor="@color/colorHintText"
            android:gravity="center"
            android:textSize="14dp"
            app:fontFamily="@font/open_sans_family"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/quiz_1"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/ready_button"
            android:layout_marginTop="57dp"
            app:layout_constraintTop_toTopOf="@+id/imageView"/>

    <ImageView
            android:id="@+id/answer_1"
            android:src="@drawable/quiz_1_answer_1"
            android:adjustViewBounds="true"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="60dp"
    />
    <ImageView
            android:id="@+id/answer_2"
            android:src="@drawable/quiz_1_answer_2"
            android:adjustViewBounds="true"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="60dp"
    />
    <ImageView
            android:id="@+id/answer_3"
            android:src="@drawable/quiz_1_answer_3"
            android:adjustViewBounds="true"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:id="@+id/answer_4"
            android:src="@drawable/quiz_1_answer_4"
            android:adjustViewBounds="true"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />


</androidx.constraintlayout.widget.ConstraintLayout>