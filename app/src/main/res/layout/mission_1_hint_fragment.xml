<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:maxHeight="220dp"
        android:maxWidth="350dp"
        android:minHeight="220dp"
        android:minWidth="350dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <ImageView
            android:src="@drawable/mission_1_background"
            android:adjustViewBounds="true"
            android:layout_width="350dp"
            android:layout_height="wrap_content" android:id="@+id/imageView"/>

    <TextView
            android:id="@+id/text"
            android:textColor="@color/colorHintText"
            android:textSize="14dp"
            app:fontFamily="@font/open_sans_family"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/mission_1_hint"
            android:layout_width="350dp"
            android:layout_height="wrap_content" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/go_button" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="@+id/imageView"/>

    <ImageView
            android:id="@+id/image_ship"
            android:text="@string/start_game_hint"
            android:layout_width="340dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toTopOf="@+id/go_button"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="@+id/imageView"/>


    <ImageView
            android:id="@+id/back_button"
            android:src="@drawable/back"
            android:adjustViewBounds="true"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="75dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:id="@+id/go_button"
            android:src="@drawable/mission_go"
            android:adjustViewBounds="true"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>