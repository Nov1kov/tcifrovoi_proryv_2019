<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:maxHeight="220dp"
        android:maxWidth="350dp"
        android:minHeight="220dp"
        android:minWidth="350dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <ImageView
            android:src="@drawable/donate_background"
            android:adjustViewBounds="true"
            android:layout_width="350dp"
            android:layout_height="wrap_content" android:id="@+id/imageView"/>

    <TextView
            android:id="@+id/text"
            android:textColor="@color/colorHintText"
            android:textSize="14dp"
            android:gravity="center"
            app:fontFamily="@font/open_sans_family"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/donate_message"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/ready_button"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="@+id/imageView"/>

    <ImageView
            android:id="@+id/ok_button"
            android:src="@drawable/ok_button"
            android:adjustViewBounds="true"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp"/>

    <ImageView
            android:id="@+id/again_button"
            android:src="@drawable/again_01"
            android:adjustViewBounds="true"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>